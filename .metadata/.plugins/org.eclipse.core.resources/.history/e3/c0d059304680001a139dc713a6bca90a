package interfacetopic;
interface Exam
{
	void percentage();
}
class Student
{
	int stdId, m1, m2, m3;
	String name;
	public Student(String name, int stdId, int m1, int m2, int m3)
	{
		this.name=name;
		this.stdId=stdId;
		this.m1=m1;
		this.m2=m2;
		this.m3=m3;
	}
	public void display()
	{
		System.out.println("======Student Info=======");
		System.out.println("name="+name);
		System.out.println("stdId="+stdId);
		System.out.println("m1="+m1);
		System.out.println("m2="+m2);
		System.out.println("m3="+m3);
	}
}
class Result extends Student implements Exam
{
	Result(String name, int stdId, int m1, int m2, int m3)
	{
		super(name,stdId,m1,m2,m3);
	}
	
	@Override
	public void percentage()
	{
		int total = m1+m2+m3;
		double percent = (total*100)/300;
//		double percent = (total/300)*100;//0*0
		System.out.println("The Percentage of "+name+" is "+percent+" %");
	}
}
public class Tester3
{
	public static void main(String[] args) 
	{
		Result r1 = new Result("Rama", 123, 99, 99, 99);
		r1.display();
		r1.percentage();
		Result r2 = new Result("Seetha", 124,10,20,5);
		r2.display();
		r2.percentage();
	}
}
